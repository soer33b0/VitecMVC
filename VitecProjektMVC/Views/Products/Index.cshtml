@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@addTagHelper "*, VitecProjectMVC"
@model IEnumerable<VitecProjektMVC.Models.ProductItem>
@{
    Layout = "_Layout";
}

<h1 align="center">@ViewData["Title"]</h1>

<p align="center">Her kan du se vores sortiment af produkter:</p>
<vc:monthly-specials />
<div class="container">
    <main role="main" class="pb-3">
        <vc:monthly-specials />
        <div class="text-center">

            @await Html.PartialAsync("_ProductTable")

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Title</th>
                        <th scope="col">Product Description</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in @Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Title</td>
                            <td>@product.ProductDescription</td>
                            <td>@product.Price DKK</td>
                            <td>
                                <form method="post" asp-controller="Products" asp-route-id="@product.Id" asp-action="Buy">
                                    <button type="submit" class="btn btn-primary"> Køb </button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>

    </main>
</div>
