@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "_Layout";
}


<div class="container">
    <main role="main" class="pb-3">

        <div class="text-center">
            <h1 class="display-4">Fordi alle skal have en chance</h1>
            <p>Se vores produkter <a href="@Url.Action("Index", "Products")">her</a>.</p>

            <div class="row mt-4 ">
                <div class="col-sm-6">
                    <div class="card border-dark">
                        <div class="card-body">
                            <img class="card-img-top" src="https://api.fleekframework.com/sites/VITEC.png" alt="Card image cap">
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card border-dark">
                        <div class="card-body">
                            <img class="card-img-top" src="https://api.fleekframework.com/sites/CDORDFRONT.png" alt="Card image cap">
                        </div>
                    </div>
                </div>
            </div>
            <p></p>
            <h3>Se hvordan vi er med til at gøre en forskel</h3>
            <div class="row mt-4">
                <div class="embed-responsive embed-responsive-4by3">
                    <iframe width="1680" height="718" src="https://www.youtube.com/embed/Es2j-3_6Jmo" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>

            </div>
            <p></p>
            <div class="card text-center  border-dark">

                <div class="card-body">
                    <h5 class="card-title">CD-ORD</h5>
                    <p class="card-text">Pc-baseret læse- og skriveprogram, der hjælper usikre læsere og ordblinde.</p>
                    <a href="#" class="btn btn-primary">Se mere</a>
                </div>

            </div>

            <div class="card text-center mt-4 border-dark">

                <div class="card-body">
                    <h5 class="card-title">Kontakt</h5>
                    <p class="card-text">Har du spørgsmål?</p>
                    <a href="#" class="btn btn-primary">Kontakt os her</a>
                </div>

            </div>


        </div>

    </main>
</div>